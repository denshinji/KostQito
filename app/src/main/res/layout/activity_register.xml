<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RegisterActivity"
    android:background="@drawable/reg_page">


    <com.google.android.material.textfield.TextInputLayout
        android:paddingLeft="70dp"
        android:paddingRight="30dp"
        android:id="@+id/teg_username"
        android:layout_marginLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/prof"
        android:textColorHint="@android:color/black"
        >
        <EditText
            android:id="@+id/name"
            android:hint="Name"
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/l2"
        android:layout_below="@+id/teg_username"
        android:textColorHint="@android:color/black"
        android:paddingLeft="70dp"
        android:paddingRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_height="65dp"
        android:background="@drawable/email_login"

       >
        <EditText
            android:id="@+id/email"
            android:hint="Email"
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        app:passwordToggleEnabled="true"
        android:id="@+id/l3"
        app:passwordToggleTint="@color/colorPrimary"
        android:layout_below="@id/l2"
        android:textColorHint="@android:color/black"
        android:layout_marginTop="10dp"
        android:paddingLeft="70dp"
        android:paddingRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:background="@drawable/pass_login"
        >
        <EditText
            android:id="@+id/password"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@android:color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorPrimary"
        android:id="@+id/l4"
        android:layout_marginTop="10dp"
        android:layout_below="@id/l3"
        android:textColorHint="@android:color/black"
        android:paddingLeft="70dp"
        android:paddingRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:background="@drawable/pass_login"
      >
        <EditText
            android:id="@+id/cpassword"
            android:hint="Confirm Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
         />
    </com.google.android.material.textfield.TextInputLayout>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        android:progressTint="@color/colorText"
        android:layout_below="@id/l4"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        />

    <ImageButton
        android:id="@+id/r_btn"
        android:layout_width="80dp"
        android:background="@drawable/but"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="140dp" />


</RelativeLayout>