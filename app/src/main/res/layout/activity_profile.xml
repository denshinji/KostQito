<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/drawer"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".Profile_Activity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:title="PROFILE"
        app:titleTextColor="@color/colorText"/>


    <ScrollView
        android:id="@+id/sc_profile"
        android:layout_below="@+id/toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="200dp"
                    android:background="@color/colorAccent"
                    android:src="@drawable/photo_2"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="460dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="30dp"
                        android:paddingRight="250dp"
                        android:src="@drawable/ic_person_black_24dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="50dp"
                        android:gravity="center"
                        android:text="DENI AL FARIZI"
                        android:textAlignment="center"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:paddingRight="250dp"
                        android:layout_marginBottom="150dp"
                        android:src="@drawable/ic_mail_black_24dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="75dp"
                        android:layout_marginTop="80dp"
                        android:gravity="center"
                        android:text="DENIALFARIZI.DA@GMAIL.COM"
                        android:textAlignment="center"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:paddingRight="250dp"
                        android:layout_marginBottom="90dp"
                        android:src="@drawable/ic_phone_black_24dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginTop="140dp"
                        android:gravity="center"
                        android:text="+6282284220439"
                        android:textAlignment="center"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:paddingRight="250dp"
                        android:layout_marginBottom="30dp"
                        android:src="@drawable/ic_person_pin_circle_black_24dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="200dp"
                        android:gravity="center"
                        android:text="PADANG,SUMATERA BARAT"
                        android:textAlignment="center"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="90dp"
                        android:paddingRight="250dp"
                        android:layout_marginBottom="30dp"
                        android:src="@drawable/ig" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginRight="79dp"
                        android:layout_marginTop="260dp"
                        android:gravity="center"
                        android:text="Denialfarizi"
                        android:textAlignment="center"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="50dp"
                        android:id="@+id/btnsaved"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="CALL ME"
                        android:textColor="@android:color/white"
                        android:background="@color/colorPrimary"
                        />



                </FrameLayout>
            </TableLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:itemTextColor="@color/colorPrimary"
        app:itemIconTint="@color/colorPrimary"
        app:menu="@menu/drawermenu"
        android:layout_gravity="start"/>
</androidx.drawerlayout.widget.DrawerLayout>